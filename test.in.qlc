#include <stdbool.h>
#include <stdint.h>
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

typedef struct MyStruct {
  int32_t x, y, z;
  char *string;

  void print(MyStruct *self);
  void deinit(MyStruct *self);
} MyStruct;

void MyStruct.print(MyStruct *self) {
  printf("(%i, %i, %i), %s\n", self->x, self->y, self->z, self->string);
}

void MyStruct.deinit(MyStruct *self) {
  free(self->string);
}

void someFunction() { printf("Hello, World!\n"); }

int main(void) {
  MyStruct *sp = (MyStruct *)malloc(sizeof(MyStruct));
  defer free(sp);
  defer printf("should run second\n");

  if (false) {
    // Defer stuff should be inserted here
    return 0;
  }
  defer printf("should run first\n");

  if (true) {
    defer printf("This prints second!\n");
    printf("hello there\n");
    // Defer should *not* insert anything here since the scope does not end
    // explicitely, but the above defer should insert the printf here.
    // So, the printf is inserted but the free is not.
  }

  someFunction();
  MyStruct s = (MyStruct){
      .x = 0b10,
      .y = 0xFF,
      .z = 0o30,
      .string = (char *)malloc(23),
  };
  memcpy(s.string, "Hello there it's steve", 23);
  defer s.deinit();
  s.print();
  MyStruct.print(&s);

  // Defer stuff should be inserted here
  return 0;
}
